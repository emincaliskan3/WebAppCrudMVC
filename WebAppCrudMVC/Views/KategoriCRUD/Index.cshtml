@model IEnumerable<Kategori>

@{
    ViewBag.Title = "Kategoriler";
}

<h2 class="fw-bolder">Kategoriler</h2>

<p>
    @Html.ActionLink("Kategori Ekle", "Create", null, new { @class = "  btn btn-primary" })

</p>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stok)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stok)
            </td>

            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-success" })
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }
    

</table>





